{
  "name": "mern-testing-assignment",
  "version": "1.0.0",
  "description": "Testing and Debugging MERN Applications",
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "jest",
    "test:unit": "jest --selectProjects client server --testPathPattern='unit'",
    "test:integration": "jest --selectProjects client server --testPathPattern='integration'",
    "test:e2e": "cd client && npm run test:e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev"
  },
  "keywords": ["mern", "testing", "jest", "react", "express"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0"
  }
}
