{
  "name": "server",
  "version": "1.0.0",
  "description": "Express server with testing",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest --config ../jest.config.js --selectProjects server",
    "test:unit": "jest --config ../jest.config.js --selectProjects server --testPathPattern='unit'",
    "test:integration": "jest --config ../jest.config.js --selectProjects server --testPathPattern='integration'",
    "test:watch": "jest --config ../jest.config.js --selectProjects server --watch",
    "setup-test-db": "node tests/setup-test-db.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3"
  }
}
